{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "checkJs": false,
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./src/types",
    "incremental": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "sourceMap": true,
    "types": [
      "vuetify",
      "node",
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/vuetify/types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "ES6"
    ]
  },
  "include": [
    "./src/**/*",
    "./src/**/*.vue",
    "./src/**/*.ts",
    "./api/**/*.ts",
  ],
  "exclude": [
    "./node_modules",
  ],
  "watchOptions": {
    "excludeDirectories": [
      "node_modules"
    ]
  }
}